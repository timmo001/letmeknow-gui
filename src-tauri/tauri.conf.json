{
  "productName": "letmeknow-gui",
  "version": "0.4.1",
  "identifier": "dev.timmo.letmeknow.gui",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../build"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "LetMeKnow",
        "url": "/",
        "width": 370,
        "height": 86,
        "x": 24,
        "y": 24,
        "acceptFirstMouse": false,
        "alwaysOnTop": true,
        "decorations": false,
        "focus": false,
        "fullscreen": false,
        "resizable": false,
        "shadow": false,
        "transparent": true
      },
      {
        "label": "settings",
        "title": "Settings | LetMeKnow",
        "url": "/settings",
        "width": 480,
        "height": 310,
        "center": true,
        "decorations": false,
        "focus": true,
        "shadow": false,
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    },
    "trayIcon": {
      "id": "main",
      "iconAsTemplate": false,
      "iconPath": "icons/icon.png",
      "menuOnLeftClick": true,
      "title": "LetMeKnow",
      "tooltip": "LetMeKnow"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "category": "Utility",
    "license": "Apache-2.0",
    "licenseFile": "../LICENSE",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
